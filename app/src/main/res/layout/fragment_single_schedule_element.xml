<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:background="#641EC8"
    tools:context="com.example.yi.smartschedule.SingleScheduleElement"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent">
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="#C7C7C7"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/EventTriangle"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/EventTriangle"
            android:scaleY="-1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/FoodEventIcon"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7C7"
            android:text="Eat out"
            android:textSize="22dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7C7"
            android:text="1a - 2a"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#C7C7C7"
            android:text="McDonalds by the office. Don't choke you bumbling buffoon!"
            android:ellipsize="end"
            android:maxLines="4"
            android:singleLine="false"
            android:textSize="18dp" />
    </LinearLayout>



</LinearLayout>
